{
  "extends": "../../../scripts/typescript/tsconfig.fluentui",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist/dts",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "paths": {
      "@uifabric/build": ["scripts"],
      "@fluentui/*": ["packages/fluentui/*/src"]
    }
  },
  "include": ["src", "test"],
  "references": [
    {
      "path": "../accessibility"
    },
    {
      "path": "../state"
    },
    {
      "path": "../styles"
    },
    {
      "path": "../react-component-event-listener"
    },
    {
      "path": "../react-component-ref"
    },
    {
      "path": "../react-northstar-fela-renderer"
    },
    {
      "path": "../react-northstar-styles-renderer"
    }
  ]
}
